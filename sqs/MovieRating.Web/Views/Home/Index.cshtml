@model MovieListViewModel
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">My movies</h1>
    <form action="/Movie" method="get">
        <input type="text" id="title" name="title" placeholder="Movie Title" required>
        <input type="submit" value="Find">
    </form>
    
    <hr>
    <ul>
        @foreach (var movie in Model.SavedMovies.Select(movie => movie.Title))
        {
            <li><a href="Movie?title=@movie">@movie</a></li>
        }
    </ul>
</div>